{
  "name": "tavern-card-game",
  "version": "0.1.0",
  "description": "Tavern Card Game - Roguelike card battle game",
  "main": "src/server.js",
  "scripts": {
    "dev": "nodemon src/server.js",
    "start": "node src/server.js",
    "test": "jest --coverage --verbose",
    "test:watch": "jest --watch",
    "test:unit": "jest --testPathPattern='.test.js$'",
    "test:coverage": "jest --coverage --coverageReporters=html text json-summary",
    "lint": "eslint .",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "migrate:make": "knex migrate:make --knexfile database/knexfile.js",
    "migrate:latest": "knex migrate:latest --knexfile database/knexfile.js",
    "migrate:rollback": "knex migrate:rollback --knexfile database/knexfile.js",
    "migrate:status": "knex migrate:status --knexfile database/knexfile.js",
    "migrate:up": "knex migrate:up --knexfile database/knexfile.js",
    "migrate:down": "knex migrate:down --knexfile database/knexfile.js",
    "seed:make": "knex seed:make --knexfile database/knexfile.js",
    "seed:run": "knex seed:run --knexfile database/knexfile.js",
    "db:setup": "npm run migrate:latest && npm run seed:run",
    "db:reset": "npm run migrate:rollback --all && npm run db:setup",
    "db:fresh": "rm -f database/dev.sqlite3 && npm run db:setup"
  },
  "keywords": [
    "game",
    "card-game",
    "roguelike",
    "websocket"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "morgan": "^1.10.0",
    "pg": "^8.11.3",
    "redis": "^5.9.0",
    "socket.io": "^4.6.1",
    "sqlite3": "^5.1.7",
    "uuid": "^13.0.0",
    "winston": "^3.11.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "eslint": "^9.39.1",
    "jest": "^30.0.0-alpha.6",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "supertest": "^7.1.4"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
